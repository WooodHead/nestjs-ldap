{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "pretty": true,
    "declaration": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    "inlineSourceMap": true,
    "inlineSources": true,

    "outDir": "./dist",
    "moduleResolution": "node",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "noLib": false,
    "target": "es2020",
    "skipLibCheck": true,
    "lib": ["ES2020"],

    "rootDir": "./lib"
  },
  "include": ["lib/**/*", "typings/global.d.ts"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}
